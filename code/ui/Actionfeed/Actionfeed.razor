﻿@using Sandbox;
@using Sandbox.UI;
@using Sandbox.UI.Construct;
@using System;
@using System.Collections.Generic;

@namespace Jigsaw

@inherits Panel

<style>

	.actionfeed {
		z-index: 100;
		width: 100%;
		height: 100%;
		/*border: 1px solid #c3c3c3;*/

		align-self: flex-end;

		flex-direction: column;
		flex-flow: column;
	}
		
	entry {
		opacity: 1;
		border-radius: 30px;
		background-color: rgba( black, 0.7 );
		width: 350px;
		height: 60px;

		right:5px;
		top:5px;
		padding: 15px;
		backdrop-filter: blur( 5px );

		color: #FFFFFF;
		font-family: Poppins;
		font-size: 20px;
		font-weight: 600;
		margin-top: 10px;
		margin-right: 10px;
		align-self: flex-end;
		/*align-content: center;*/
		align-items: center;
		justify-content: center;
		text-align: center;
		text-stroke: 5px black;
		transform: scale( 1 );	
	}

</style>

<root>

	<div class="actionfeed">
		@foreach(ActionEntry entry in Entries)
        {
			<entry style="background-color: @entry.color ">@entry.message</entry>
			//<entry>@entry.message</entry>
		}
	</div>

</root>

@code {

	public IList<ActionEntry> Entries { get; set; }

	public async void AddActionEntry( string message )
	{
		ActionEntry e = new ActionEntry(message);
		Entries.Add(e);

		StateHasChanged();

		await Task.Delay(10000);

		Entries.Remove(e);
		StateHasChanged();
	}

	public class ActionEntry : Panel
	{
		public string color {get; set; }
		public string message { get; internal set; }
		public Image Icon { get; internal set; }

		public RealTimeSince TimeSinceBorn = 0;

		public ActionEntry(string message)
		{
			Icon = Add.Image();
			this.message = message;
			this.color = RandomColor();
		}

		public override void Tick()
		{
			base.Tick();

			if (TimeSinceBorn > 15)
			{
				Delete();
			}
		}

		private string RandomColor()
		{
			Random rand = new Random();
			string[] cols = { "#FFEC7A80", "#FFCE3B80", "#FFA15880", "#FFF59880", "#FFD37180" };
			return cols[rand.Next(0, cols.Length)];
		}
	}

}


