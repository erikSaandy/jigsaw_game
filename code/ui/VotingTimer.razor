@using System;
@using Sandbox;
@using Sandbox.UI;

@namespace Jigsaw

@inherits Panel

<style>
	.votingTimer {

		opacity: 0.8;

		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;


		flex-direction: column;

		border-radius: 40px;

		margin-bottom:25px;
		width: 140px;
		height: 80px;

		background-color: black;
		backdrop-filter: blur( 5px );
	
	}

	.timer {
		opacity: 1;

		font-size: 30px;
		color: white;
		font-family: Poppins;
		font-weight: 600;

		justify-content: center;
		padding-top:15px;
		padding-bottom: 15px;
		
		text-stroke: 5px black;

		/*text-align: center;*/
		width: 100%;
		height: 100%;
	}
</style>


<root>
	@if (Visible)
	{
		<panel class="votingtimer">
			<panel class="timer">
				@Timer
			</panel>
		</panel>
	}
</root>

@code {
	public static VotingTimer Current;

	public string Timer = "0.0";
	public bool Visible = false;

	public void SetTimer(float t)
	{
		t = (t < 0) ? 0 : t;
		Timer = t.ToString("0");
	}

	public VotingTimer()
	{
		Current = this;
	}

	protected override int BuildHash()
	{
		return HashCode.Combine(Timer, Visible);
	}

}
