@using System;
@using Sandbox;
@using Sandbox.UI;

@namespace Jigsaw

@inherits Panel

<style>

	.root {

		position: absolute;
		width: 100%;
		height: 100%;
		align-items: center;
		pointer-events: none;

		flex-direction: column;
	}

	.header {

		align-items: center;

		font-family: Poppins;
		font-size: 100px;
		font-weight: 600;
		width: 1000px;
		height: 70px;
		top: 20px;

		opacity: 1;
		color: #ffd333;
		font-family: Poppins;
		font-weight: 600;
		text-shadow: 0px 0px 4px black;

		justify-content: center;
		text-align: center;

		/*text-stroke: 2px black;*/
	}

	.subtext {

		align-items: center;
		border-radius: 40px color: white;
		font-family: Poppins;
		font-weight: 600;
		width: 1000px;
		height: 40px;
		top: 25px;
		/*background-color: rgba(black, 0.5);
		backdrop-filter: blur( 5px );*/
		opacity: 1;
		font-size: 30px;
		color: white;
		font-family: Poppins;
		font-weight: 600;
		justify-content: center;
		text-align: center;
		text-shadow: 1px 1px 2px black;
		/*text-stroke: 2px black;*/

	}


</style>

<root class="root">

	@if (Visible)
	{
		<div class="header">
			You are the leader
		</div>

		<div class="subtext">
			Enter an Image URL in the chat to get started.
		</div>
	}

</root>

@code {
	public static LeaderInfo Current { get; set; }

	public bool Visible { get; set; }

	public LeaderInfo()
	{
		Current = this;
		Visible = false;
	}

	protected override int BuildHash()
	{
		return HashCode.Combine(Visible);
	}

}
