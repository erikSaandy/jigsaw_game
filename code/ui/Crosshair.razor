@using System;
@using Sandbox;
@using Sandbox.UI;

@namespace Jigsaw

@inherits Panel

<style>
	crosshair {
		position: absolute;
		z-index: -1;
		align-items: flex-end;
		background-color: #fff4;
		mix-blend-mode: lighten;
		width: 5px;
		height: 5px;
		top: 50%;
		left: 50%;
		border-radius: 100px;
		transform: translate( -50% -50% );
	}
</style>

@code {
	public static Crosshair Current;

	public Crosshair()
	{
		Current = this;
	}
}
